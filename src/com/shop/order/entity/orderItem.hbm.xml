<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.shop.order.entity.OrderItem" table="orderitem">
		<id name="itemid">
			<generator class="native"/>
		</id>
		<property name="count"/>
		<property name="subtotal"/>
		<!-- 与订单的关系 -->
		<many-to-one name="order" class="com.shop.order.entity.Order" column="oid" />
		<!-- 与商品的关系 -->
		<many-to-one name="product" lazy="false" class="com.shop.product.entity.Product" column="p_id"/>
	</class>
</hibernate-mapping>